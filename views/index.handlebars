<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
  </div>
</div>

<div class="container">
  <div class="row text-center">
    <div class="col d-flex justify-content-center">
      <div class="card" style="width: 18rem;">
        <div class="card-body">

          <h2>Add a Burger</h2>
          <form class="create-form">

            <div class="form-group">
              <input type="text" id="ca" name="name">
            </div>

            <button class="btn btn-primary" type="submit">Add Burger</button>

          </form>
        </div>
      </div>
    </div>
  </div>

  <br><br>

  <div class="row text-center">

    <div class="col d-flex justify-content-center">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h3>Ready to Eat</h3>
          <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col d-flex justify-content-center">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h3>Devoured</h3>
          <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers devoured=true}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>

<ul class="nav justify-content-center fixed-bottom">Nash McDonald</ul>